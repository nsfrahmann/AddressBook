@using Microsoft.AspNetCore.Identity
@inject UserManager<AddressUser> UserManager
@model AddressBook.Models.Profile

@{
    ViewData["Title"] = "Create";
}

<h4>Profile</h4>
<hr />
<main>
    <div class="container" id="phonefix" style="padding-top: 80px; padding-bottom: 40px">
        <div class="row">
            <div class="col-12">
                <div class="card" style="border-color: black; box-shadow: 0px 0px 7px 0px rgba(0, 0, 0, 0.8); transition: 0.3s;">
                    <h3 class="card-title pl-3" style="padding-top:30px">Create Your Profile</h3>
                    <hr />
                    <div class="row">
                        <div class="col-12">
                            <form asp-action="Create" enctype="multipart/form-data">
                                @Html.Hidden("UserId", UserManager.GetUserId(User))
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group col-xl-5 col-lg-5 col-md-7 col-sm-7">
                                    <label asp-for="FirstName" class="control-label"></label>
                                    <input asp-for="FirstName" class="form-control" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="form-group col-xl-5 col-lg-5 col-md-7 col-sm-7">
                                    <label asp-for="LastName" class="control-label"></label>
                                    <input asp-for="LastName" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                                <div class="form-group col-xl-5 col-lg-5 col-md-7 col-sm-7">
                                    <label asp-for="FileName" class="control-label">Profile Pic</label>
                                    <div style="position: relative">
                                        <input asp-for="Image" type="file" id="image" class="form-control" style="opacity: 0; z-index:2; position: absolute; width:20rem" />
                                        <div class="input-group flex-nowrap" style="width: 20rem">
                                            <div class="input-group-prepend text-left">
                                                <input class="input-group-text" value="Upload" style="width: 5rem; color: white; background-color: #1e3d73">
                                            </div>
                                            <span class="form-control text-black" id="showfile"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-xl-5 col-lg-5 col-md-7 col-sm-7">
                                    <label asp-for="Email" class="control-label"></label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group col-xl-5 col-lg-5 col-md-7 col-sm-7">
                                    <label asp-for="Address1" class="control-label"></label>
                                    <input asp-for="Address1" class="form-control" />
                                    <span asp-validation-for="Address1" class="text-danger"></span>
                                </div>
                                <div class="form-group col-xl-5 col-lg-5 col-md-7 col-sm-7">
                                    <label asp-for="Address2" class="control-label"></label>
                                    <input asp-for="Address2" class="form-control" />
                                    <span asp-validation-for="Address2" class="text-danger"></span>
                                </div>
                                <div class="form-group col-xl-5 col-lg-5 col-md-7 col-sm-7">
                                    <label asp-for="City" class="control-label"></label>
                                    <input asp-for="City" class="form-control" />
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                                <div class="form-group col-xl-5 col-lg-5 col-md-7 col-sm-7">
                                    <label asp-for="State" class="control-label"></label>
                                    <input asp-for="State" class="form-control" />
                                    <span asp-validation-for="State" class="text-danger"></span>
                                </div>
                                <div class="form-group col-xl-5 col-lg-5 col-md-7 col-sm-7">
                                    <label asp-for="ZipCode" class="control-label"></label>
                                    <input asp-for="ZipCode" class="form-control" />
                                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                                </div>
                                <div class="form-group col-xl-5 col-lg-5 col-md-7 col-sm-7">
                                    <label asp-for="Phone" class="control-label"></label>
                                    <input type="number" asp-for="Phone" class="form-control" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                                <div class="row col-md-12">
                                    <div class="form-group col-xl-1 col-lg-1 col-md-2 col-sm-2">
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                    </div>
                                    <div class="col-xl-1 col-lg-4 col-md-4 col-sm-4 pt-3">
                                        <a asp-controller="Home" asp-action="Index">Back</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</main>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
